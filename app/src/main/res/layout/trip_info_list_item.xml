<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|start"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left">
        <TextView
            android:id="@+id/destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="300dp"
            android:textSize="16sp"
            android:hint="@string/destinations" />
        <ImageButton
            android:id="@+id/trip_name_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/avatar_circle"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_baseline_edit_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start">
        <EditText
            android:id="@+id/trip_startTime_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:inputType="time"
            android:hint="Bắt đầu"
            android:maxWidth="120dp"
            android:textSize="16sp"
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  -->  "/>
        <EditText
            android:id="@+id/trip_endTime_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:hint="Kết thúc"
            android:maxWidth="120dp"
            android:textSize="16sp"
            android:maxLines="1" />
    </LinearLayout>
</LinearLayout>