<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|left">

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:hint="@string/destinations"
                android:maxWidth="300dp"
                android:maxLines="2"
                android:padding="5dp"
                android:textSize="16sp" />
            <View android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

            <TextView
                android:id="@+id/trip_destination_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="dd/MM/yyyy"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --  " />

            <TextView
                android:id="@+id/trip_destination_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Bắt đầu"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->  " />

            <TextView
                android:id="@+id/trip_destination_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Kết thúc"
                android:layout_marginEnd="8dp"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:textSize="16sp" />
</LinearLayout>